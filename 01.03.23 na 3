a_1 = int(input("введите первый член для арифмитической прогрессии: "))
b_1 = int(input("введите первый член для геометрической прогрессии: "))
q = int(input("введите знаменатель: "))
d = int(input("введите разность: "))
n = int(input("введите порядковый номер члена: "))
print('через формулу')
s_a = ((2*a_1+d*(n-1))/2)*n
print(f"{s_a} - арифмитическая прогрессия")
s_b = (b_1*((q**n)-1))/(q-1)
print(f"{s_b} - геометрическая прогрессия")
print('через цикл')
for i in range(0, n):
    an = a_1+(n-1) * d
    a_n = an + d
    print(f"{a_n} - арифмитическая прогрессия")
    break
for i in range(0, n):
    bn = b_1*(q**(n-1))
    b_n = bn * q
    print(f"{b_n} - геометрическая прогрессия")
    break

a = int(input("введите первый член для арифмитической прогрессии: "))
b = int(input("введите первый член для геометрической прогрессии: "))
q = int(input("введите знаменатель: "))
d = int(input("введите разность: "))
n = int(input("введите порядковый номер члена: "))
print('через формулу')
s_a = ((2*a+d*(n-1))/2)*n
print(f"{s_a} - арифмитическая прогрессия")
s_b = (b*((q**n)-1))/(q-1)
print(f"{s_b} - геометрическая прогрессия")
print('через цикл')
for i in range(1, n):
    a = a + d 
print(f"{a} - арифмитическая прогрессия")
for i in range(1, n):
    b = b * q
print(f"{b} - геометрическая прогрессия")

one = int(input("Введите номер первого члена: "))
diff = int(input("Введите  разность прогрессии: "))
denominator = int(input("Введите знаменатель прогрессии: "))
last_member = int(input("Введите номер последнего члена: "))
choice = int(input("Введите способ решения: (формула - 1) (цикл - 2): "))
n = last_member-one
if choice == 1:
    an = one + ((last_member - 1) * diff)
    s1 = (one + an) * last_member / 2
    s2 = (one*((denominator**n)-1))/denominator-1
    print(f"{s1} - сумма Aрифмитической прогрессии", f" {s2} - сумма Геометрической прогрессии, ")
if choice == 2:
    for i in range(last_member):
        one = i + one
        diff = one+diff
    print(diff)
    for i in range(last_member):
        one = i * one
        denominator = one + denominator
    print(one)

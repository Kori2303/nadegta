one = int(input("Введите первый член: "))
diff = int(input("Введите разность прогрессии: "))
denominator = int(input("Введите знаменатель прогрессии: "))
last_member = int(input("Введите номер последнего члена: "))
n=last_member-one
while denominator!=1:
 s1 = (one*(denominator**n - 1))/(denominator-1)
 print(f"геометрическая прогрессия {s1} ")
 break
while diff:
 s2 = (((one+last_member)/2)*n)
 print(f"арифметическая прогрессия {s2} ")
 break
